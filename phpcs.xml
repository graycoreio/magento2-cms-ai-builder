<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Graycore_CmsAiBuilder">
    <description>Magento 2 Coding Standard for Graycore CmsAiBuilder Module</description>

    <!-- Use Magento2 coding standard -->
    <rule ref="Magento2"/>

    <!-- Paths to check -->
    <file>.</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/view/adminhtml/web/js/admin-preview/*</exclude-pattern>
    <exclude-pattern>view/adminhtml/web/js/admin-preview/*</exclude-pattern>
    <exclude-pattern>./view/adminhtml/web/js/admin-preview/*</exclude-pattern>
</ruleset>
